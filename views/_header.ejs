<header id="header">
    <div id="header-nav">
        <div id="header-name">
            <h2>
                Social Media
            </h2>

        </div>
        <div id="header-links">
            <ul >
                <% if( locals.user ) { %>
                   
                    <li> 
                        <a href="/users/profile"> <%= user.name %> </a>
                    </li>
                    
                    <li> 
                        <a href="/users/sign-out"> Sign Out </a>
                    </li>
        
                <% } else { %>
                    <li> 
                        <a href="/users/sign-up"> Sign Up </a>
                    </li>
                    <li> 
                        <a href="/users/sign-in"> Sign In </a>
                    </li>
        
                <% } %>
            </ul>

        </div>  
    </div>
    
</header>
